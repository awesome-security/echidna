use lib '../lib';

use warnings;
use strict;
use v5.10;

#
# NSMF INCLUDES
#
use NSMF::Node;
use NSMF::Node::Component::TEST;

my $config_file = '../etc/cxtracker.yaml';

# Creating new TEST Node
my $cxt = NSMF::Node::Component::TEST->new();

# Loading configuration variables
$cxt->load_config($config_file);

# Connect and Authenticate
$cxt->sync;
$cxt->start;

