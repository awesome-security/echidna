sub login
{
    my ($kernel, $heap) = @_[KERNEL, HEAP];

    if( ! defined($heap->{name}) ) {
        $heap->{name} = input_get('Username: ');
    }

    if( ! defined($heap->{secret}) ) {
        $heap->{secret} = sha256_hex(input_get('Password: '));
    }

    $kernel->yield('authenticate');
}

sub load_session
{
    my ($kernel, $heap) = @_[KERNEL, HEAP];

    # clear existing known commands
    $acommands = [];

    # start the query process
    $kernel->yield('get', {
        type => 'core',
        data => 'modules_available'
    }, sub {
        my ($s, $k, $h, $json) = @_;

        my $modules = $json->{result} // [];

        foreach my $m ( @{ $modules } ) {
            $kernel->yield('get', {
                type => $m,
                data => 'commands_available'
            }, sub {
                my ($s, $k, $h, $json) = @_;

                check_available_commands($m, $json->{result} // []);
            });
        }
    });

    ReadMode "ultra-raw";

    # build up
    $heap->{console} = POE::Wheel::ReadWrite->new(
        InputHandle => \*STDIN,
        OutputHandle => \*STDOUT,
        InputEvent => "prompt",
        Filter => POE::Filter::Stream->new()
    );

    # show we are ready to recieve user prompt
    prompt_print();
}

sub check_available_commands {
    my ($m, $r) = @_;

    if( defined( $ncommands->{$m} ) ) {
        foreach my $c ( @{ $r } ) {
            if( defined( $ncommands->{$m}{$c} ) ) {
                foreach my $n ( @{ $ncommands->{$m}{$c} } ) {
                    push( @{ $acommands }, $n );
                }
            }
        }
    }
}


sub prompt
{
    my ($kernel, $heap, $data) = @_[KERNEL, HEAP, ARG0];

    my $data_raw = unpack("c*", $data );

#    say("GOT: $data_raw");

    if( $data_raw == 13 ) {
      print( "\n" );
    }
    elsif ( $data_raw == 127 ) {
        if( length($command) ) {
          print( "\b\e[K" );
          chop($command);
        }

        return;
    }
    else {
        print $data;
        $command .= $data;
        return;
    }


    # loop through all available commands
    foreach my $c ( @{ $acommands } ) {
        return if( ! $c->{function}($kernel, $command) );
    }

    # no commands seen
    if( $command =~ /^(help|h|\?)\s?(.*)$/ ) {
        my $extra = $2;

        if( length($extra) ) {
            for my $c (@{ $acommands }) {
                if ( $c->{command} eq $extra ) {
                    return prompt_return("\n" . $c->{help} . "\n");
                }
            }

            output_print('Sorry DAVE, I don\'t understand that: ' . $extra . "\n");
        }
        else {
            output_print("Available commands:\n");

            for my $c (@{ $acommands }) {
                output_print('  ' . $c->{command} . "\n");
            }
        }
    }
    elsif( $command =~ /^(quit|exit|q|x)$/ ) {
        # TODO: close cleanly
        $kernel->call('client', 'close');
    }
    elsif( $command =~ /^[^\s]+/ ) {
        output_print('Sorry DAVE, I don\'t understand that: ' . $command . "\n");
    }

    prompt_return();
}

sub prompt_return {
    my $message = shift // '';

    output_print($message);

    print("\e[G" . 'echidna> ');

    $command = "";
}

sub output_print {
    my $message = shift // '';

    foreach my $m ( split(/\n/, $message) ) {
        print "\e[G" . $m . "\n";
    }
}

sub prompt_print
{
    if ( $module_active eq 'core' ) {
        print('echidna> ');
    }
    else {
        print($module_active . '> ');
    }

    $command = "";
}


sub input_get {
    my ( $message ) = @_;

    $message //= '';

    print( 'echidna> ' . $message );

    my $input = <STDIN>;
    chomp($input);

    return $input;
}

sub close {
    my ( $kernel, $heap ) = @_[KERNEL, HEAP];


    delete($heap->{console});
    $kernel->yield("shutdown");
}



#
# COMMAND TESTING AND PROCESSING
#

sub register_agent {
    my ($kernel, $data) = @_;

    if( $data =~ /^register\sagent\s(.*)/) {
        my $sql = {};

        my @search_args = split(/[ ]/, $1);

        foreach my $k ( @search_args ) {
            given( $k ) {
                when(/^--name=([^ ]*)/) {
                    $sql->{name} = $1;
                }
                when(/^--password=([^ ]*)/) {
                    $sql->{password} = sha256_hex($1);
                }
                when(/^--description=([^ ]*)/) {
                    $sql->{description} = $1;
                }
                default {
                    prompt_return('Unsupported parameter: ' . $k);
                    return 0;
                }
            }
        }

        if( ! defined_args( $sql->{name},
                            $sql->{password} ) ) {
            prompt_return("Mandatory arguments are missing.");
            return 0;
        }

        $kernel->yield('get', {
            type => "core",
            data => {
              "register_agent" => $sql
            },
        }, sub {
            my ($s, $k, $h, $json) = @_;

            my $result = $json->{result} // [];

            # TODO post process result with client aware components

            prompt_return(Dumper($result));
        });

        return 0;
    }

    return 1;
}

sub update_agent {
    my ($kernel, $data) = @_;

    if( $data =~ /^update\sagent\s(.*)/) {
        my $sql = {};

        my @search_args = split(/[ ]/, $1);

        foreach my $k ( @search_args ) {
            given( $k ) {
                when(/^--id=([^ ]*)/) {
                    $sql->{id} = $1;
                }
                when(/^--name=([^ ]*)/) {
                    $sql->{name} = $1;
