                when(/^--password=([^ ]*)/) {
                    $sql->{password} = sha256_hex($1);
                }
                when(/^--description=([^ ]*)/) {
                    $sql->{description} = $1;
                }
                default {
                    prompt_return('Unsupported parameter: ' . $k);
                    return 0;
                }
            }
        }

        if( ! defined_args( $sql->{id} )  ){
            prompt_return("Mandatory arguments are missing.");
            return 0;
        }

        $kernel->yield('get', {
            type => "core",
            data => {
              "update_agent" => $sql
            },
        }, sub {
            my ($s, $k, $h, $json) = @_;

            my $result = $json->{result} // [];

            # TODO post process result with client aware components

