}

sub update_node {
    my ($kernel, $data) = @_;

    if( $data =~ /^update\snode\s(.*)/) {
        my $sql = {};

        my @search_args = split(/[ ]/, $1);

        foreach my $k ( @search_args ) {
            given( $k ) {
                when(/^--id=([^ ]*)/) {
                    $sql->{id} = $1;
                }
                when(/^--name=([^ ]*)/) {
                    $sql->{name} = $1;
                }
                when(/^--agent=([^ ]*)/) {
                    $sql->{agent_id} = $1;
                }
                when(/^--password=([^ ]*)/) {
                    $sql->{password} = sha256_hex($1);
                }
                when(/^--description=([^ ]*)/) {
                    $sql->{description} = $1;
                }
                default {
                    prompt_return('Unsupported parameter: ' . $k);
                    return 0;
                }
            }
        }

        if( ! defined_args( $sql->{id} )  ){
            prompt_return("Mandatory arguments are missing.");
            return 0;
        }

        $kernel->yield('get', {
            type => "core",
            data => {
              "update_node" => $sql
            },
        }, sub {
            my ($s, $k, $h, $json) = @_;

            my $result = $json->{result} // [];

            # TODO post process result with client aware components

            prompt_return(Dumper($result));
        });

        return 0;
    }

    return 1;
}

