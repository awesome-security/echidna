                when(/^--id=([^ ]*)/) {
                    $sql->{id} = $1;
                }
                default {
                    $logger->debug('Unsupported parameter: ' . $k);
                    return 0;
                }
            }
        }

        $kernel->yield('get', {
            type => "core",
            data => {
              "unregister_node" => $sql
            },
        }, sub {
            my ($s, $k, $h, $json) = @_;

            my $result = $json->{result} // [];

            # TODO post process result with client aware components

            say(Dumper($result));
            prompt_print();
        });

        return 0;
    }

    return 1;
}

