sub register_client {
    my ($kernel, $data) = @_;

    if( $data =~ /^register\sclient(.*)/) {
        my $sql = {};

        my @search_args = split(/[ ]/, $1);

        if( @search_args == 0 ) {
            prompt_return("I need arguments.");
            return 0;
        }

        foreach my $k ( @search_args ) {
            given( $k ) {
                when(/^--name=([^ ]*)/) {
                    $sql->{name} = $1;
                }
                when(/^--acl=([^ ]*)/) {
                    $sql->{level} = $1;
                }
                when(/^--password=([^ ]*)/) {
                    $sql->{password} = sha256_hex($1);
                }
                when(/^--description=([^ ]*)/) {
                    $sql->{description} = $1;
                }
                default {
                    prompt_return('Unsupported parameter: ' . $k);
                    return 0;
                }
            }
        }

        if( ! defined_args( $sql->{name},
                            $sql->{level},
                            $sql->{password} ) ) {
            prompt_return("Mandatory arguments are missing.");
            return 0;
        }

        $kernel->yield('get', {
            type => "core",
            data => {
              "register_client" => $sql
            },
        }, sub {
            my ($s, $k, $h, $json) = @_;

            my $result = $json->{result} // [];

            # TODO post process result with client aware components

            prompt_return(Dumper($result));
        });

        return 0;
    }

    return 1;
}

