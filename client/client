sub show_clients {
    my ($kernel, $data) = @_;

    if( $data =~ /^show\sclients$/) {
        $kernel->yield('get', {
            type => "core",
            data => "clients_connected",
        }, sub {
            my ($s, $k, $h, $json) = @_;

            my $result = $json->{result};

            if( ref($result) eq 'HASH' ) {
                prompt_return(Dumper($result));
            }
            else {
                # TODO post process result with client aware components
                prompt_return( "Unknown!");
            }
        });

        return 0;
    }

    return 1;
}

sub show_nodes {
    my ($kernel, $data) = @_;

    if( $data =~ /^show\snodes$/) {
        $kernel->yield('get', {
            type => "core",
            data => "nodes_connected",
        }, sub {
            my ($s, $k, $h, $json) = @_;

            my $result = $json->{result};

            if( ref($result) eq 'ARRAY' ) {

                my $total_nodes = @{ $result };
                output_print($total_nodes . ' node(s) ' . ( $total_nodes == 1 ? 'is' : 'are' ) . ' connected.');

                foreach my $n ( @{ $result } ) {
                    output_print($n->{id} . ': ' . $n->{name} . ' (' . $n->{type}. ') - ' . $n->{description});
                }
                prompt_return();
            }
            else {
                # TODO post process result with client aware components
                prompt_return( "Unknown!");
            }
        });

        return 0;
    }

    return 1;
}


sub show_node_uptime {
    my ($kernel, $data) = @_;

    if( $data =~ /^node\suptime\s?(.*)$/) {

        my $id = -1;
        my @search_args = split(/[ ]/, $1);

        foreach my $k ( @search_args ) {
            given( $k ) {
                when(/^--id=([^ ]*)/) {
                    $id = $1;
                }
                default {
                    prompt_return('Unsupported parameter: ' . $k);
                    return 0;
                }
            }
        }

        if ( $id <= 0 ) {
            prompt_return('Invalid ID specified.');
            return 0;
        }

        $kernel->yield('get', {
            type => "core",
            data => {
                node_uptime => {
                    id => $id
                }
            }
        }, sub {
            my ($s, $k, $h, $json) = @_;

            my $result = $json->{result};

            prompt_return('Echidna Node ' . $id . ' has been up for ' . time_seconds_to_human_readable($result) . '.');
        });

        return 0;
    }

    return 1;
}

sub show_node_version {
    my ($kernel, $data) = @_;

    if( $data =~ /^node\sversion\s?(.*)$/) {
        my $id = -1;
        my @search_args = split(/[ ]/, $1);

        foreach my $k ( @search_args ) {
            given( $k ) {
                when(/^--id=([^ ]*)/) {
                    $id = $1;
                }
                default {
                    prompt_return('Unsupported parameter: ' . $k);
                    return 0;
                }
            }
        }

        if ( $id <= 0 ) {
            prompt_return('Invalid ID specified.');
            return 0;
        }

        $kernel->yield('get', {
            type => "core",
            data => {
                node_version => {
                    id => $id
                }
            }
        }, sub {
            my ($s, $k, $h, $json) = @_;

            my $result = $json->{result};

            if( ref($result) eq 'HASH' ) {
                my $literal = 'Echidna Node ' . $id .  ' version: v' . join('.', $result->{major}, $result->{minor}, $result->{revision}) . ' (b' . $result->{build} . ')';
                prompt_return($literal);
            }
            else {
                # TODO post process result with client aware components
                prompt_return("Unknown");
            }
        });

        return 0;
    }

    return 1;
}

